{
	"apps" : [{
		"name" : "localtion",
		"script": "bin/www",
		"cwd": "./",
		"watch":[
			"*"
		],
		"ignore_watch": [
			"node_modules",
			"logs",
			"public"
		],
		"instances": "1",
		"exec_mode": "cluster",
		"max_memory_restart": "1000M",
		"max_restarts": 15,
		"out_file": "/dev/null",
		"error_file": "/dev/null",
		"env": {
			"NODE_ENV": "production",
			"HOST": "0.0.0.0"
		}
	}]
}
